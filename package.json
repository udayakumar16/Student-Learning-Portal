{
  "name": "ai-student-learning-platform",
  "private": true,
  "engines": {
    "node": ">=18.17.0 <23"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "dev:clean": "node scripts/clean-frontend-next.mjs && npm run dev",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "dev:frontend:clean": "node scripts/clean-frontend-next.mjs && npm run dev:frontend",
    "dev:frontend:turbo": "npm run dev:turbo -w frontend",
    "dev:frontend:turbo:clean": "node scripts/clean-frontend-next.mjs && npm run dev:frontend:turbo",
    "build:backend": "npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "build:frontend:clean": "node scripts/clean-frontend-next.mjs && npm run build:frontend",
    "seed": "npm run seed -w backend"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
